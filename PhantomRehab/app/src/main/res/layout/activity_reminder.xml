<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:background="@color/blue_theme"
        android:fontFamily="@font/raleway_semibold"

        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/set_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="34dp"
        android:layout_marginBottom="34dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="@string/reminder"

        android:textColor="@color/black"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/freq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"

        android:layout_marginStart="50dp"

        android:text="@string/frequency"
        android:fontFamily="@font/raleway_semibold"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <RelativeLayout
        android:id="@+id/choose_two_times1day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/btn_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/radio_button_on"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"
            />

        <ImageView
            android:id="@+id/btn_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"
            android:src="@drawable/radio_button_off" />

        <TextView
            android:id="@+id/two_times1day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="100dp"

            android:text="@string/twice_a_day"
            android:textSize="24sp"
            android:textColor="@color/black"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/choose_none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/btn_on2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/radio_button_on"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/btn_off2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"
            android:src="@drawable/radio_button_off" />

        <TextView
            android:id="@+id/none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="100dp"

            android:text="@string/none"
            android:textSize="24sp"
            android:textColor="@color/black"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/choose_one_times1day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/btn_on3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/radio_button_on"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"
            android:visibility="invisible"

            />

        <ImageView
            android:id="@+id/btn_off3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"
            android:src="@drawable/radio_button_off" />

        <TextView
            android:id="@+id/one_times1day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="100dp"

            android:textColor="@color/black"
            android:text="@string/once_a_day"
            android:textSize="24sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/choose_one_times1week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp">

        <ImageView
            android:id="@+id/btn_on4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/radio_button_on"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/btn_off4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"
            android:src="@drawable/radio_button_off" />

        <TextView
            android:id="@+id/one_times1week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="100dp"

            android:textColor="@color/black"
            android:text="@string/once_a_week"
            android:textSize="24sp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/clk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"

        android:layout_marginStart="50dp"

        android:text="Time"
        android:fontFamily="@font/raleway_semibold"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

